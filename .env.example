# App runtime
APP_ENV=development
LOG_LEVEL=INFO

# GitHub App
GITHUB_APP_ID=123456
# Use either GITHUB_PRIVATE_KEY (inline) or GITHUB_PRIVATE_KEY_PATH (recommended)
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END RSA PRIVATE KEY-----"
GITHUB_PRIVATE_KEY_PATH=
GITHUB_WEBHOOK_SECRET=replace_with_random_webhook_secret
GITHUB_TOKEN=
GITLAB_WEBHOOK_SECRET=

# LLM selection (ollama | custom | gemini | openai | openrouter | azure_openai | deepseek | deepseek_r1)
LLM_PROVIDER=ollama
LLM_API_KEY=
LLM_MODEL_NAME=llama3.1
LLM_EMBEDDING_MODEL=models/text-embedding-004
LLM_ENDPOINT=http://localhost:11434
LLM_FALLBACK_PROVIDER=none
LLM_FALLBACK_API_KEY=
LLM_FALLBACK_MODEL_NAME=
LLM_FALLBACK_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-10-21
DEEPSEEK_ENDPOINT=https://api.deepseek.com/v1
OPENROUTER_ENDPOINT=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=
OPENROUTER_APP_NAME=FOSSMate

# Data stores
QDRANT_URL=in-memory
QDRANT_COLLECTION_NAME=fossmate_chunks
DATABASE_URL=sqlite+aiosqlite:///./fossmate.db
QUEUE_WORKERS=1

# Feature flags
FEATURE_PR_SUMMARY=true
FEATURE_FILE_SUMMARY=true
FEATURE_REVIEW_SUGGESTIONS=true
FEATURE_SCORING=true
FEATURE_COMMIT_TRIGGER=true
FEATURE_EMAIL_REPORTS=false
FEATURE_DEVELOPER_EVAL=false
FEATURE_GITLAB=false

# Optional email delivery
EMAIL_ENABLED=false
EMAIL_FROM=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=
EMAIL_SMTP_PASSWORD=

# Optional local tunnel helper values
NGROK_AUTHTOKEN=
WEBHOOK_PUBLIC_URL=
